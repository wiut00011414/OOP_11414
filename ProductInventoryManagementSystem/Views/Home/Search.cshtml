@model List<ProductInventoryManagementSystem.Models.Entities.Product>
@{
    ViewData["Title"] = "Search";
}

<div>
	<form class="text-center d-flex" asp-action="Search" asp-controller="Home">
		<input class="form-control me-2 m-2" type="search" placeholder="Search" aria-label="Search" name="value">
		<button class="btn btn-outline-primary m-2">Search</button>
	</form>
</div>

<h1 class="text-center text-dark">Search result</h1>

@if (Model.Count < 1)
{
	<h5 class="text-center text-dark">nothing...</h5>
}
else
{
	@foreach (var item in Model)
	{
		<div class="row m-1">
			<div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 col-xl-10">
				<p class="list-group-item list-group-item-action list-group-item-secondary pointer"
				onclick="showInfo(@item.Id)">
					@item.Name
				</p>
			</div>
			<div class="col-xs-12 col-sm-4 col-md-4 col-lg-3  col-xl-2">
				<a class="btn btn-outline-primary m-1" href="/Home/EditProduct/@item.Id">Edit</a>
				<a class="btn btn-outline-danger m-1" href="/Home/RemoveProduct/@item.Id">Remove</a>
			</div>
		</div>
	}
}

@section Scripts {
	<script src="~/js/showInfo.js"></script>
}

