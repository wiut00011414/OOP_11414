@{
    ViewData["Title"] = "EditBook";
}
@model LibraryBookManagementSystem.Models.ViewModels.EditBookViewModel

<div class="container text-center custom-group-form">
    <form asp-action="EditBook" asp-controller="Home" method="post">
		<div class="form-group">
			<label asp-for="Title">Title</label><br />
			<input class="form-control" type="text" asp-for="Title" placeholder="Название айтема" />
			<span asp-validation-for="Title" />
		</div>

		<div class="form-group">
			<label asp-for="Author">Author</label><br />
			<input class="form-control" type="text" asp-for="Author" placeholder="Название айтема" />
			<span asp-validation-for="Author" />
		</div>

		<div class="form-group">
			<label asp-for="Description">Description</label><br />
			<input class="form-control" type="text" asp-for="Description" placeholder="Название айтема" />
			<span asp-validation-for="Description" />
		</div>

		<div class="form-group">
			<label asp-for="Genre">Genre</label><br />
			<select class="form-control" asp-for="Genre">
				<option value="Classics">Classics</option>
				<option value="Detective">Detective</option>
				<option value="Mystery">Mystery</option>
				<option value="Fantasy">Fantasy</option>
				<option value="HistoricalFiction">Historical Fiction</option>
				<option value="LiteraryFiction">Literary Fiction</option>
				<option value="Other">Other</option>
			</select>
			<span asp-validation-for="Genre" />
		</div>

		<div class="m-4">
			<button class="btn btn-outline-primary">Save changes</button>
		</div>

    </form>
</div>

