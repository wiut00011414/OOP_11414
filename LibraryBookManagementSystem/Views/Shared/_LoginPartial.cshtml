@if (User.Identity.IsAuthenticated)
{
	<ul class="navbar-nav me-auto mb-2 mb-lg-0">
		<li class="nav-item">
			<p class="nav-link text-dark">Welcome @User.Identity.Name</p>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
		</li>
	</ul>
}
else
{
	<ul class="navbar-nav me-auto mb-2 mb-lg-0">
		<li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Sign up</a></li>
		<li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Sign in</a></li>
	</ul>
}