@model LibraryBookManagementSystem.Models.ViewModels.RegisterViewModel;
@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center">Sign up</h2>

<div class="container text-center custom-group-form">
	<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
		<div class="validation" asp-validation-summary="ModelOnly"></div>

		<div class="form-group">
			<label asp-for="Name">Name</label><br />
			<input class="form-control" type="text" asp-for="Name" placeholder="Name" />
			<span asp-validation-for="Name" />
		</div>
		<div class="form-group">
			<label asp-for="Password">Password</label><br />
			<input class="form-control" asp-for="Password" placeholder="Password" />
			<span asp-validation-for="Password" />
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword">Repeat password</label><br />
			<input class="form-control" asp-for="ConfirmPassword" placeholder="Repeat password" />
			<span asp-validation-for="ConfirmPassword" />
		</div>

		<div class="form-group">
			<p>Choose your role</p>
			<input type="radio" value="student" name="role" asp-for="Role" />Student<br/>
			<input type="radio" value="librarian" name="role" asp-for="Role" />Librarian<br />
			<input type="radio" value="admin" name="role" asp-for="Role" />Admin<br />
		</div>

		<div class="m-4">
			<input class="btn btn-outline-primary" type="submit" value="Sign up" />
		</div>
	</form>
	<p>already have an account? - <a asp-action="Login" asp-controller="Account">SignIn</a>!</p>
</div>

